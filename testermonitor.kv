#:kivy 1.10.1


<StartScreen>
    FloatLayout:    
        Button:
            text: "Start monitoring"
            pos_hint: {'x': 0.4, 'y': 0.7}
            size_hint: 0.2, 0.2
            on_press: root.push_start()
            font_size: 12


<MonitoringScreen>
    FloatLayout:
        Label:
            text_size: root.width, None 
            text: root.label_text
            on_ref_press: root.webopen()
            markup: True
            halign: 'center'
        Button:
            text: "End monitoring"
            pos_hint: {'x': 0.4, 'y': 0.7}
            size_hint: 0.2, 0.2
            on_press: root.push_end()
            font_size: 12